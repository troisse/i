<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e1e1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Add"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/app_bar_add">

    <ImageView
        android:id="@+id/imageView"

        android:layout_width="188dp"
        android:layout_height="155dp"
        android:layout_above="@+id/button_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:cropToPadding="false"
        android:src="@drawable/gucci"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv" />


    <ImageButton
        android:id="@+id/button_image"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:layout_below="@+id/tv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="252dp"
        android:layout_marginLeft="164dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <TextView
        android:id="@+id/tv"
        android:layout_width="167dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="267dp"
        android:layout_marginLeft="108dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/liq_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/liq_price"
        android:layout_width="137dp"
        android:layout_height="38dp"
        android:layout_alignLeft="@+id/upload"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/upload"
        android:layout_marginBottom="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Ksh."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/upload"
        app:layout_constraintEnd_toStartOf="@+id/upload"
        app:layout_constraintTop_toTopOf="@+id/textView_5" />

    <Button
        android:id="@+id/upload"
        android:layout_width="87dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="280dp"
        android:layout_marginStart="280dp"
        android:background="@android:color/holo_red_light"
        android:text="POST"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_above="@+id/liq_price"
        android:layout_alignLeft="@+id/liq_name"
        android:layout_alignStart="@+id/liq_name"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:text="Product Price"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/liq_price"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_5" />

    <EditText
        android:id="@+id/liq_name"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/liq_price"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/liq_price"
        android:layout_marginBottom="4dp"
        android:ems="10"
        android:hint="Brand"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textView_5"
        app:layout_constraintStart_toStartOf="@+id/liq_group"
        app:layout_constraintTop_toBottomOf="@+id/tv" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:layout_above="@+id/liq_name"
        android:layout_alignLeft="@+id/liq_name"
        android:layout_alignStart="@+id/liq_name"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:text="Product Name"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/liq_name"
        app:layout_constraintStart_toStartOf="@+id/textView_5"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView_5"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:layout_below="@+id/tv"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="Group"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/liq_name" />

    <EditText
        android:id="@+id/liq_group"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_below="@+id/textView_5"
        android:layout_marginBottom="43dp"
        android:layout_marginEnd="112dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="112dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="46dp"
        android:hint="Enter Liquor group"
        app:layout_constraintBottom_toBottomOf="@+id/liq_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="@+id/liq_price"
        app:layout_constraintTop_toTopOf="@+id/liq_name" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Add Products"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/liq_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_image" />


</android.support.constraint.ConstraintLayout>