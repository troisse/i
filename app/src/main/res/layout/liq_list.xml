<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_liq"
        android:layout_width="108dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/gucci"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/name_liq"
         />

    <TextView
        android:textColor="#000058"
        android:id="@+id/name_liq"
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toStartOf="@id/price_liq" />

    <TextView
        android:textColor="#000058"
        android:id="@+id/price_liq"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>